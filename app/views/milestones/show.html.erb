<p id="notice"><%= notice %></p>

<h2><%= @milestone.title %></h2>
<%= @milestone.startdate %> - <%= @milestone.enddate %>
<h3><%= @milestone.project.title %></h3>



<p>
  <%= @milestone.description %>
</p>

<table>
  <tr>
    <th colspan="2">Teilnehmer:</th>
  </tr>
<% @milestone.users.each do |user| %>
  <tr>
    <td><%= link_to user.vname + " " + user.nname.first + ".", edit_participation_path(@milestone.participations.where(user_id: user.id).first) %></td>
    <td><%= user.mpeak(@milestone.id) %></td>
  </tr>
<% end %>
</table>

<aside class="fr">
  <table class="attendee">
    <% User.aktuell.order('nname').each do |user| %>
      <% uname =  user.vname + " " + user.nname.first + "." %>
      <% if @milestone.participations.any? { |participation| participation.user_id == user.id } %>
        <% cl = "tn" %>
        <% link = "( X )" %>
      <% else %>
        <% cl = "ntn" %>
        <% link = "" %>
      <% end %>
      <tr>
        <td class="name"><%= link_to uname, edit_user_url(user) %></td>
        <td class="checkbox"><%= link_to link, adparticipant_path(id: @milestone.id, user_id: user.id, todo: cl), class: cl %></td>
      </tr>
    <% end %>
  </table>
</aside>
<%= link_to 'Edit', edit_milestone_path(@milestone) %>
